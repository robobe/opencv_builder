{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Download and extract",
            "type": "shell",
            "options": {
                "cwd": "#{w${workspaceFolder}/scripts"
            },
            "command": "download_and_extract",
            "args": [
                "${input:selectCommand}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "opencv_version",
            "type": "pickString",
            "options": [
                "4.10",
                "4.11"
            ],
            "description": "Select opencv vesion",
            "default": "4.10"
            
        }
    ]
}